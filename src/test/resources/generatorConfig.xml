<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="default" targetRuntime="MyBatis3Simple">
        <!--        去除所有注释-->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--        数据库连接-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/jiakao?serverTimezone=GMT%2B8"
                        userId="root"
                        password="root1234">
        </jdbcConnection>

        <!--        Model的位置-->
        <javaModelGenerator targetPackage="com.ideal.jk.pojo.po" targetProject="src/test/java">

        </javaModelGenerator>


        <!--        XML的位置-->
        <sqlMapGenerator targetPackage="com.ideal.jk.mapper" targetProject="src/test/resources">
        </sqlMapGenerator>

        <!--        Mapper的位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.ideal.jk.mapper" targetProject="src/test/java">
        </javaClientGenerator>

        <table tableName="coach"/>
        <table tableName="dic_type"/>

    </context>
</generatorConfiguration>
